<?php

namespace Domain\ContentBuilder\Trait;

use Domain\Shared\ArrayCollection;

trait BlockTrait
{
    /**
     * Get value of blocks
     *
     * @return Block[]
     */
    public function getBlocks(): ArrayCollection
    {
        return $this->blocks;
    }

    /**
     * Add value in blocks
     *
     * @param Block $block
     *
     * @return self
     */
    public function addBlock($block): self
    {
        if (!$this->blocks->contains($block)) {
            $this->blocks[] = $block;
            // TODO
            // $block->setPage($this);
        }

        return $this;
    }
    
    /**
     * Remove value from blocks
     *
     * @param Block $block
     *
     * @return self
     */
    public function removeBlock($block): self
    {
        if ($this->blocks->removeElement($block)) {
            // TODO
            // if ($block->getPage() === $this) {
            //     $block->setPage(null);
            // }
        }

        return $this;
    }
}
